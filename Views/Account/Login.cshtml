@using CarRental3._0.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p><h4>Влезте си в акаунта</h4></p>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Грешка!</b> Моля, попълнете правилно всички полета.</span>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Влезте" />
                        <a class="btn btn-outline-secondary" asp-controller="Car" asp-action="Index">Назад</a>
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register">Регистрирайте се</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
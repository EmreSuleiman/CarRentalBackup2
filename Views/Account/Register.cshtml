@using CarRental3._0.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Регистрирайте нов акаунт</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Възникна грешка</b> @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Имейл</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Парола</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Потвърди парола</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Пълно име</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Регистрирай се" />
                        <a class="btn btn-outline-secondary" asp-controller="Car" asp-action="Index">Отказ</a>
                    </div>

                    <div class="mt-3">
                        <h6>Изисквания за парола:</h6>
                        <ul>
                            <li>Поне 6 символа</li>
                            <li>Поне една цифра (0-9)</li>
                            <li>Поне една малка буква (a-z)</li>
                            <li>Поне една главна буква (A-Z)</li>
                            <li>Поне един специален символ</li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
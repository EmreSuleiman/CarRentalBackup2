@model CarRental3._0.ViewModels.DeleteCarViewModel

@{
    ViewData["Title"] = "Изтрий кола";
}

<div class="container">
    <h2>Изтрий кола</h2>
    <h3>Сигурни ли сте, че искате да изтриете тази кола?</h3>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Brand @Model.Model</h4>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Марка</label>
                        <input value="@Model.Brand" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Модел</label>
                        <input value="@Model.Model" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Локация</label>
                <input value="@Model.LocationName" class="form-control" readonly />
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="CarId" />
                <button type="submit" class="btn btn-danger">Изтрий</button>
                <a asp-action="Index" class="btn btn-secondary">Отказ</a>
            </form>
        </div>
    </div>
</div>
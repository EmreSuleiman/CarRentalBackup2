@using CarRental3._0.ViewModels
@model EditCarViewModel

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="CarId" />

    <div class="form-group">
        <label asp-for="Brand">Марка</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Модел</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year">Година</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DailyRate">Дневна такса</label>
        <input asp-for="DailyRate" class="form-control" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Категория</label>
        <select asp-for="Category" class="form-control">
            <option value="Икономична">Икономична</option>
            <option value="Луксозна">Луксозна</option>
            <option value="Ван">Ван</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <select asp-for="Status" class="form-control">
            <option value="В наличност">В наличност</option>
            <option value="Наета">Наета</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Връзка за изображение</label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Промени</button>
</form>

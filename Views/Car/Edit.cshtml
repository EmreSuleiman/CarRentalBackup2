@using CarRental3._0.ViewModels
@model EditCarViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="CarId" />

    <div class="form-group">
        <label asp-for="Brand">Марка</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Модел</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year">Година</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LocationId">Локация</label>
        <select asp-for="LocationId" class="form-control">
            <option value="">-- Избери локация --</option>
            @foreach (var location in Model.Locations)
            {
                <option value="@location.Value" selected="@(location.Selected)">@location.Text</option>
            }
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DailyRate">Дневна такса</label>
        <input asp-for="DailyRate" class="form-control" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Категория</label>
        <select asp-for="Category"
                class="form-control"
                asp-items="Html.GetEnumSelectList<CarCategory>()">
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <select asp-for="Status" class="form-control">
            <option value="В наличност">В наличност</option>
            <option value="Наета">Наета</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Текуща снимка</label>
        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
        {
            <img src="@Model.ExistingImagePath" class="img-thumbnail" style="max-height: 200px;" />
        }
        else
        {
            <p>Няма качена снимка</p>
        }
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Качете снимка</label>
        <input asp-for="ImageFile" class="form-control" type="file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Промени</button>
</form>

@model CarRental3._0.ViewModels.CarCreateViewModel
@using CarRental3._0.Interfaces
@inject ILocationService LocationService


@{
    ViewData["Title"] = "Добави нова кола";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <partial name="_ValidationScriptsPartial" />

    <input asp-for="Status" type="hidden" />

    <div class="form-group">
        <label asp-for="Brand">Марка</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Модел</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year">Година</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LocationId">Локация</label>
        <select asp-for="LocationId" class="form-control" asp-items="Model.Locations">
            <option value="">-- Изберете локация --</option>
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DailyRate">Дневна такса</label>
        <input asp-for="DailyRate" class="form-control" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Категория</label>
        <select asp-for="Category"
                class="form-control"
                asp-items="Html.GetEnumSelectList<CarCategory>()">
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Изображение</label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
        <small class="form-text text-muted">
            Макс. 5MB; JPG, JPEG, PNG.
        </small>
    </div>

    <button type="submit" class="btn btn-primary">Добави</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
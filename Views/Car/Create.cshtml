@model CarRental3._0.ViewModels.CarCreateViewModel
@using CarRental3._0.Interfaces
@inject ILocationService LocationService

@{
    ViewData["Title"] = "Добави нова кола";
}
<form method="post" asp-action="Create">
    @*Brand*@
    <div class="form-group">
        <label asp-for="Brand">Марка</label>
        <input asp-for="Brand" type="brand" class="form-control" placeholder="Въведи марка">
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    @*Model*@
    <div class="form-group">
        <label asp-for="Model">Модел</label>
        <input asp-for="Model" type="Model" class="form-control" placeholder="Въведи модел">
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    @*Year*@
    <div class="form-group">
        <label asp-for="Year">Година</label>
        <input asp-for="Year" type="Year" class="form-control" placeholder="Въведи година">
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    @*Location*@
    <div class="form-group">
        <label asp-for="LocationId"></label>
        <select asp-for="LocationId" asp-items="Model.Locations" class="form-control">
            <option value="">-- Изберете локация --</option>
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>

    @*DailyRate*@
    <div class="form-group">
        <label asp-for="DailyRate" for="exampleInputDailyRate">Дневна такса</label>
        <input asp-for="DailyRate" type="DailyRate" class="form-control" placeholder="Въведи дневна такса">
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    @*Category*@
    <div>

        <label asp-for="Category">Категория</label>
        <select asp-for="Category" class="form-control">
            <option value="Икономична">Икономична</option>
            <option value="Луксозна">Луксозна</option>
            <option value="Ван">Ван</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    @*Image*@
    <div class="form-group">
        <label asp-for="ImageFile"></label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Добави</button>
</form>
